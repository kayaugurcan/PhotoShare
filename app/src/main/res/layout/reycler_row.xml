<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#DFD6AA">

    <TextView
        android:id="@+id/recycler_row_kullanici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullan覺c覺 Emaili"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:background="#ABCABC"
        android:textColor="#200811"
    />

    <ImageView
        android:id="@+id/recycler_row_imageview"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/recycler_row_yorum_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:background="#BC9CE1"
        android:textColor="#200811"
        android:text="Kullan覺c覺 Yorumu"
        android:layout_margin="5dp"
        />



</LinearLayout>